


<div class="panel panel-default">
  <div class="panel-heading">Horizontal form</div>
  <div class="panel-body">

    <%= form_for @post do |f| -%>
        ...
        <%#= form.cktext_area :body, :class => 'someclass', :ckeditor => {:language => 'uk'} %>

        <div class="form-group">
          <label class="col-sm-2 control-label">Section Title</label>
          <div class="col-sm-10">
            <%= f.text_field :name, :class => "sectionname" %>
          </div>
        </div>



        <div class="form-group">
          <label class="col-sm-2 control-label">Body</label>
          <div class="col-sm-10">
            <%= f.text_area :description, :id => "adminedit", :cols => "100", :rows => "15" %>
          </div>
        </div>



        ...
        <%#= form.cktext_area :body, :value => 'Default value', :id => 'sometext' %>
        ...
        <%#= cktext_area :post, :info, :cols => 40, :ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini'} %>
        ...
    <% end -%>
    </div>
  </div>


<!-- Initialize the editor. -->
<script>
    $(function() {
        $('#edit').froalaEditor()
    });
    $(function() {
        $('#adminedit').froalaEditor()
    });
</script>