<div class="col-sm-12  <%= I18n.locale.to_s %>">
  <div class="panel panel-default">


    <h3>Search DevJobs Opportunities</h3>

    <div class="panel-body">



      <%= form_tag notices_path, :method => 'get' do %>
          <%= hidden_field_tag :locale, I18n.locale %>


          <div class="col-sm-6">

            <div class="field">
              Keyword Search<br>
              <%= text_field_tag :search_term %>
            </div>

            <br><br>



            Technical Areas<br>

            <%= select_tag "technicalarea_ids", options_from_collection_for_select(Technicalarea.all, "id", "name"), { :multiple => true, :prompt => "select -->"} %>
            <br><br>-->

            Target Groups<br>
            <%= select_tag "categories_ids", options_from_collection_for_select(Category.all, "id", "name"), { :multiple => true, :prompt => "select -->" } %>
            <br><br>


          </div>
          <div class="col-sm-6">

            Organization<br>
            <%= select_tag "organization_ids", options_from_collection_for_select(Organization.all, "id", "name"), { :multiple => true, :prompt => "select -->" }%>
            <br><br>

            Project/Job Stage<br>
            <%= select_tag "jobstage_ids", options_from_collection_for_select(Jobstage.all, "id", "name"), { :multiple => true, :prompt => "select -->" }%>
            <br><br>

            Type<br>
            <%= select_tag "jobtype_ids", options_from_collection_for_select(Jobtype.all, "id", "name"), { :multiple => true, :prompt => "select -->" }%>
            <br><br>

            Level<br>
            <%= select_tag "level_ids", options_from_collection_for_select(Level.all, "id", "name"), { :multiple => true, :prompt => "select -->" }%>
            <br><br>



            <div class="actions">
              <%= submit_tag "Search", :class => "btn btn-primary" %>
            </div>
            <br>
            <br>
            <%= submit_tag  "Reset the Search Form", :type => "reset" %>
          </div>


      <% end %>
    </div>
  </div>
</div>